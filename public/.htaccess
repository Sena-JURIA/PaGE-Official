# SPA fallback for React Router on Lolipop (Apache)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # Allow existing files and directories to be served normally
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule . - [L]
  # Fallback everything else to index.html
  RewriteRule . /index.html [L]
</IfModule>

# Cache static assets (adjust as needed)
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|webp)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Disable cache for index.html so you always get latest bundle references
<Files "index.html">
  Header set Cache-Control "no-cache"
</Files>
